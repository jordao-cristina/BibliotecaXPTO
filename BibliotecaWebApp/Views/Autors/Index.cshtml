@model IEnumerable<Autor>
@{
    ViewData["Title"] = "Index";
}

@if(TempData["success"] != null)
{
    <h2>@TempData["success"]</h2>
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista Autores</h2>
		</div>
        <div class="col-6 text-end">
            <a asp-controller="Autors" asp-action="Create" class="btn btn-primary">
               <i class="bi bi-plus-circle-fill"></i> &nbsp; Criar Novo Autor
            </a>
		</div>
	</div>
    <br /><br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Nome Autor
			    </th>
           
                <th></th>
		    </tr>
	    </thead>
         <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.Nome
				    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Autors" asp-action="Edit" asp-route-id="@obj.Id"
                            class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-controller="Autors" asp-action="Delete" asp-route-id="@obj.Id"
                            class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
					    </div>
				    </td>
			    </tr>
            }
        </tbody>
        
   
    </table>
</div>